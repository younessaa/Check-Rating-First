<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="230dp"
    android:layout_height="80dp"
    android:orientation="vertical"
    android:id="@+id/most_viewed"
    app:cardCornerRadius="15dp"
    android:layout_marginBottom="4dp"
    app:cardElevation="8dp"
    android:layout_margin="12dp">

    <LinearLayout
        android:layout_width="230dp"
        android:layout_height="80dp"
        android:background="#F5F5F5"
        android:padding="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/comment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/first"
            android:text="McDonald's"
            android:textColor="@color/colorPrimaryGray"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/comment_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/second"
            android:layout_marginLeft="50dp"
            android:text="comment"
            android:textColor="@color/colorCommentBody"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/comment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:fontFamily="@font/third"
            android:text="20/06/2022"
            android:textColor="@color/colorPrimaryGray"
            android:textSize="14dp" />


    </LinearLayout>
</androidx.cardview.widget.CardView>